html, body
  margin 0
  padding 0
  width 100%
  height 100%

body
  font-family Helvetica, Arial, sans-serif
  &.drag-enabled
    *
      cursor move
  &.dark
    .container
      background-color #222
      color #eee
      .button
        background-color #444
        color #ccc
        border 1px solid black
    .tabs-wrapper
      background-color #334
      color #999
    .tabs-level
      border-bottom 1px solid #223
    .tab-btn
      &:hover
        border-bottom 0.2em solid #779
      &.overlay
        border-bottom 0.2em solid #779
        background-color #334
    .category-description
      color #777

.top
  background-color #222
  color white
  height 5em
  box-shadow 0 0 0.35em #333
  position absolute
  top 0
  left 0
  right 0
  z-index 200

.header
  padding 0.25em 0.5em
  height 1.5em
  .logo
    color white
    text-decoration none
    font-weight bold
  .report-link
    &:hover
      color #eee

.header a, .header a:visited, .settings a, .settings a:visited
  color white

.settings
  line-height 3em
  margin 0
  padding 0 0.5em
  overflow-y auto
  height 6em

#smp-delete-container
  font-size 0.7em
  line-height 1em
  color #888

.container
  position absolute
  bottom 0
  left 0
  right 0
  top 8em
  .additional
    padding 0.5em
    line-height 2em

.container-left, .container-right
  width 50%
  float left
  height 100%
  overflow-x hidden
  overflow-y auto

.container-left
  overflow-y scroll

input
  &.text
    background-color white
    border 1px solid #ccc
    font-family inherit
    font-size inherit
    border-radius 0.4em
    transition box-shadow ease 0.15s, border ease 0.15s
    height 1.75em
    padding 0.25em
    box-sizing border-box
    &:focus
      border 1px solid #aaf
      box-shadow 0 0 0.2em #88f

select
  font-family inherit
  font-size inherit

.tabs-wrapper
  background-color #f2f2ff
  display block
  font-size 0.9em
  color black
  line-height 1.5em
  margin 0
  overflow hidden

.tabs-level
  display block
  padding 0.5em
  user-select none
  cursor default
  border-bottom 1px solid #dde

.tabs-items
  display inline

.collection-title
  font-weight bold
  display block
  margin 0.5em 0.5em 0 0.5em

.tab-btn, .tab-btn:visited, .tab-btn:active
  padding 0.25em 0.5em
  display inline-block
  cursor pointer
  line-height 1.5em
  border-color transparent
  color black
  text-decoration none

.tab-btn
  &.dragged
    visibility hidden
  img
    border 0
  &:hover
    border-bottom 0.2em solid #ccf
  &.overlay
    font-size 0.9rem
    border-bottom 0.2em solid #ccf
    background-color #f2f2ff
  &:active
    border-bottom 0.2em solid #aae

.action-btn
  background white no-repeat center
  width 14px
  height 14px
  padding 2px 4px
  cursor pointer
  text-decoration none
  display inline-block
  vertical-align middle
  border-radius 4px
  margin 0 2px
  box-shadow 0 0 2px rgba(24, 24, 24, 0.4)

.actions
  border-radius 4px
  box-shadow 0 0 2px rgba(24, 24, 24, 0.4)
  margin-left 0.35em
  display inline-block
  line-height 16px
  vertical-align middle
  overflow hidden
  .action-btn
    border-radius 0
    margin 0
    box-shadow none

.action-add
  background-color #9d9
  background-image url(../images/action-add.png)
  &:hover
    background-color #aea

.action-edit
  background-color #dde
  background-image url(../images/action-edit.png)
  &:hover
    background-color #eef

.action-delete
  background-color #d99
  background-image url(../images/action-delete.png)
  &:hover
    background-color #eaa

.tab-btn-active, .tab-btn-active:hover
  border-bottom 0.2em solid #99d

.tab-icon
  width auto
  height 1.25em
  vertical-align middle

.smiles-list
  padding 0.5em
  &.hidden
    display none
  &.processing
    opacity 0.5

.smile
  padding 0.25em
  cursor pointer
  &.dragged
    visibility hidden
  &.selected
    background-color rgba(221, 119, 119, 0.2)
    box-shadow 0 0 0 2px rgb(221, 119, 119)
    border-radius 2px
    padding 0
    margin 0.25em

.drop-hint
  display inline-block
  width 0
  min-height 16px
  outline 1px solid red

#collection
  .smile
    &.dragged
      visibility visible
      opacity 0.2

.overlay
  position fixed
  z-index 100
  &.stopping
    transition-property top, left
    transitionfunction ease-out

.category-description
  color #444
  margin 0.6667em
  font-size 0.75em
  &.light
    color #ddd

.dialog-background
  position fixed
  top 0
  left 0
  bottom 0
  right 0
  z-index 500
  background-color rgba(0, 0, 0, 0.5)

.dialog
  position fixed
  background-color white
  width 50%
  max-height 75%
  min-height 1em
  top 12.5%
  left 25%
  padding 0.5em
  border-radius 0.5em
  z-index 510
  box-shadow 0 0 5px rgba(0, 0, 0, 0.5)
  overflow-x hidden
  overflow-y auto
  line-height 2em
  &.smp-saved
    background-image url(../images/action-saved.png)
    background-repeat no-repeat
    background-position 95% 5%
    .dialog-title
      border-bottom 0
      background-color transparent

.dialog-title
  margin -0.5em
  margin-bottom 0.5em
  padding 0.25em 0.5em
  background-color #f4f4fe
  font-weight bold
  overflow hidden
  .dialog-close
    float right
    cursor pointer
    vertical-align middle
    display inline-block
    &:before
      content "Ã—"

.uploader-choice
  font-size 0.85em
  margin -0.5em -0.5em 0 -0.5em
  border-bottom 1px solid #eee
  *
    vertical-align baseline

.smile-add-notice
  color #aaa
  font-size 0.75em
  line-height 1em
  margin-bottom 0.25em
  font-style italic

#dialog-new-category
  &.mode-add
    .mode-edit
      display none
  &.mode-edit
    .mode-add
      display none

.input-width-full
  width 100%

.icon-container
  display block
  overflow-y auto
  max-height 12.5em
  margin 0.5em 0
  text-align justify
  label
    display inline-block
    margin-right 0.5em
    &:hover
      background-color #f3f3f3

.dialog-icon
  height 2.5em
  vertical-align middle

.button
  background-color #fafafa
  border 1px solid #e2e2e2
  padding 0.25em 0.375em
  font-family inherit
  font-size inherit
  color black
  &:hover
    background-color #f5f5f5
  &:active
    box-shadow 0 0 0.35em rgba(0, 0, 0, 0.2) inset

.button-primary
  background-color #22a
  border 0
  color white
  &:hover
    background-color #44b
  &:active
    box-shadow 0 0 0.35em rgba(240, 240, 255, 0.5) inset

.button:disabled, .button-primary:disabled
  opacity 0.5

.dialog-background.hidden, .dialog.hidden
  display none

.header-right
  float right
  font-size 0.9em
  margin-right 14.5em

.header .report-link, .header .report-link:visited
  color #777

.actions-menu
  position absolute
  right 0.25em
  top 0.25em
  color #999
  font-size 0.9em
  width 14em
  height 1.75em
  line-height 1.25em
  text-align right
  padding 0.25em
  cursor default
  background-color #333
  box-sizing border-box
  border-radius 0.25em
  &:hover
    border-radius 0.25em 0.25em 0 0
    .actions-list
      display block
      transition-delay 0s

.actions-list
  width 14em
  position fixed
  z-index 500
  list-style none outside none
  margin 0.25em 0 0 -0.25em
  padding 0
  background-color #333
  text-align left
  display none
  li
    margin 0
    padding 0.25em
    color white
    cursor pointer
    &:hover
      background-color #555

body.dark .tab-btn, body.dark .tab-btn:visited, body.datk .tab-btn:active
  color #bbb

body.dark .tab-btn-active, body.dark .tab-btn-active:hover
  border-bottom 0.2em solid #668

@media(max-width: 52em)
  .top, .settings, .container
    height 8em

